source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'mysql2'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'haml'
gem 'simple_form'
gem 'sunspot_rails'
gem 'sunspot_solr'
gem "rocket_tag"
gem 'rack-cache', :require => 'rack/cache'

group :development do
  gem 'unicorn'
  gem 'foreman'
end
